{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "noImplicitAny": true, 
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.test.ts", "./src/**/__tests__"]
}
